{
    "name": "Cookie Manager",
    "version": "1.0",
    "description": "Understand how websites are interacting with your cookies",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "contentSettings",
        "<all_urls>",
        "cookies"
    ],
    "background": {
      "scripts": [ 
        "StorageObjectModels.js",
        "background.js",
        "BackgroundCookieMonitor.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Cookie Info",
      "default_icon" : {
        "128": "images/cookie.png"
      }
    },
    "options_page" : "options_page/cookie_options.html",
    "manifest_version": 3
  }
